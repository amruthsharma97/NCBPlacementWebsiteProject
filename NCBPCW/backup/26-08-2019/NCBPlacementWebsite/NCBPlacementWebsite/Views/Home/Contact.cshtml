@model IEnumerable<NCBPlacementWebsite.Models.ContactList>
@{
    ViewBag.Title = "Contact";
}



<h2 class="text-primary">Contact.</h2>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Index", "ContactLists")
        </p>
    }
}

<h2 class="text-primary">Placement Officers.</h2>

<div class="row" style="font-size:18px">
    @foreach (var item in Model)
    {
        <div class="col-lg-6" style="border:2px solid #FF5E33;padding-top:20px">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name) :
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Dept) :
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.Dept)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNo) :
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MailId) :
                </dt>

                <dd>
                    @Html.DisplayFor(modelItem => item.MailId)
                </dd>


            </dl>
        </div>
    }

</div>



