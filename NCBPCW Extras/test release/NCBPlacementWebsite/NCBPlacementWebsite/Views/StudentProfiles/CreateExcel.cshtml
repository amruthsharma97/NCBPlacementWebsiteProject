
@{
    ViewBag.Title = "Create Excel";
}

<h2>Create Excel</h2>

@using (Html.BeginForm("CreateExcel", "StudentProfiles", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">

            @Html.Label("Year Of Passing", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Editor("yop", new { htmlAttributes = new { @class = "form-control" } })
                
            </div>

        </div>
        <div class="form-group">
            
            <p class="control-label col-md-3">Branch</p>
            <div class="col-md-9">
                @Html.DropDownList("branch", new SelectList(ViewBag.Branches, "Value", "Text"), "--Select Branch--", new { @class = "form-control" })
            </div>
            
        </div>

        <div class="form-group">

            @Html.Label("Minimum SSLC Percentage", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Editor("min10perc", new { htmlAttributes = new { @class = "form-control" } })

            </div>

        </div>
        <div class="form-group">

            @Html.Label("Minimum PU Percentage", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Editor("minpuperc", new { htmlAttributes = new { @class = "form-control" } })

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-9">
                <input type="submit" value="Download Excel" class="btn btn-default" />
            </div>
        </div>
    </div>
}